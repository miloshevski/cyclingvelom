<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/uploadResult.css" />
    <link rel="icon" href="logos/slika3.png" type="image/png" />
    <title>Upload Result</title>
  </head>
  <body>
    <div class="container">
      <div class="forma">
        <h1>Upload Result</h1>
        <form
          action="/results/upload"
          method="POST"
          enctype="multipart/form-data"
        >
          <input
            type="file"
            name="image"
            accept="image/*"
            id="image"
            required
            style="display: none"
          />
          <label for="image">Add Thumbnail</label>

          <input
            type="text"
            name="heading"
            placeholder="Result Heading"
            required
          />

          <textarea
            name="description"
            placeholder="Result Description"
            required
          ></textarea>

          <!-- Dropdown for Type -->
          <select name="type" required>
            <option value="" disabled selected>Select Type</option>
            <option value="road">Road</option>
            <option value="mtb">MTB</option>
            <option value="cx">CX</option>
            <option value="other">Other</option>
          </select>

          <input type="date" name="date" required />

          <button type="submit">Submit</button>
        </form>
      </div>
    </div>
    <script src="/js/uploadResult.js"></script>
  </body>
</html>
